#include <WiFi.h>
#include <PubSubClient.h>

#include <string>
#define RO_PIN 35
#define DI_PIN 32
#define RE_PIN 19// Receiver Enable (LOW = enabled)
#define DE_PIN 19// Driver Enable (LOW = disabled)


const unsigned long WIFI_RETRY_INTERVAL = 5000;
const unsigned long MQTT_RETRY_INTERVAL = 2000; 


unsigned long last_msg_time = 0;
unsigned long last_mqtt_attempt = 0;
unsigned long last_wifi_attempt = 0;
const unsigned long COMMS_TIMEOUT = 10000;
bool comms_lost = false;

const char* ssid = "ILAY";
const char* password = "lebronpookie123";
const char* mqtt_server = "192.168.0.100"; //run ipconfig (should match ipv4 of MQTT host computer)
const char* DAQ_TOPIC = "DAQ_transmiter/receiver";

WiFiClient espClient;
PubSubClient client(espClient);

void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Connecting to ");
  Serial.println(ssid);

  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("");
  Serial.println("WiFi connected");
  Serial.println("IP address: ");
  Serial.println(WiFi.localIP());
}

void callback(char* topic, byte* payload, unsigned int length) {
  String message = "";
  for (int i = 0; i < length; i++) {
    message += payload[i];
  }

  Serial.println(message);

  comms_lost = false;
  last_msg_time = millis();
}

void connect_client() {
  if (client.connected()) return;

  if (millis() - last_mqtt_attempt < MQTT_RETRY_INTERVAL) return;
  last_mqtt_attempt = millis();

  String cid = "DAQ_RECEIVER-" + WiFi.macAddress();
  if (client.connect(cid.c_str())) {
    client.subscribe(DAQ_TOPIC);
    Serial.println("Connected to MQTT broker");
  } else {
    Serial.println("MQTT reconnect failed");
  }
}

void setup() {
  Serial.println("START :)");
  Serial.begin(115200);
  pinMode(RE_PIN, OUTPUT);
  pinMode(DE_PIN, OUTPUT);
  digitalWrite(RE_PIN, LOW);//on
  digitalWrite(DE_PIN, LOW);//off

  WiFi.mode(WIFI_STA);
  setup_wifi();

  // connect to MQTT server
  client.setServer(mqtt_server, 1883);
  client.setCallback(callback);
  connect_client();

  last_msg_time = millis();

  Serial.println("done with setup");
}

void loop() {
  // SAFETY TIMEOUT
  if (!comms_lost && millis() - last_msg_time > COMMS_TIMEOUT) {
    comms_lost = true;
    Serial.println("SAFETY TIMEOUT");
  }

  // WIFI MAINTENANCE
  if (WiFi.status() != WL_CONNECTED) {
    if (millis() - last_wifi_attempt > WIFI_RETRY_INTERVAL) {
      last_wifi_attempt = millis();
      WiFi.begin(ssid, password);
    }
  }

  // MQTT MAINTENANCE
  if (WiFi.status() == WL_CONNECTED && !client.connected()) {
  connect_client();
}

  client.loop();
}
